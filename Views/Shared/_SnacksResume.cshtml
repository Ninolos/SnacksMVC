@model Snack

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl" class="img-fluid"></p>
    <h3>Preço : @Model.Price.ToString("c")</h3>

    <h4>
    <a asp-controller="Snack" asp-action="Details" 
    asp-route-snackId="@Model.SnackId">@Model.Name</a>
    </h4>

    <p>@Model.ShortDescription</p>
      <div>
        <p class="btn btn-group align-content-lg-end" >
            <a asp-controller="Snack" asp-action="List" 
               class="btn btn-outline-info">See all snacks</a>
            <a class="btn btn-primary" id="cartButton" asp-controller="ShopCart" 
            asp-action="AddItemtoCart" asp-route-snackId="@Model.SnackId"> 
            Add @Model.Name to cart
            </a>
         </p>
    </div>

</div>